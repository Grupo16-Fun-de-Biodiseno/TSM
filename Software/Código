#include <AccelStepper.h>
#define motorInterfaceType 1
//Grupo 16 

const int dirPin = 10;
const int stepPin = 13;
const int pulsador=12;
const int led=11;
const int ledRojo=7;

int estadoSistema = LOW;   
int buttonState;            
int lastButtonState = LOW;  
int reading;

unsigned long lastDebounceTime = 0;                                 
unsigned long debounceDelay = 50;    // tiempo para el antirebote

AccelStepper myStepper(motorInterfaceType, stepPin, dirPin);


void setup() {
   //Se define los pines de entrada y salida
   pinMode(pulsador, INPUT_PULLUP); 
   pinMode(led, OUTPUT);
   pinMode(ledRojo, OUTPUT);

  Serial.begin(9600);
	myStepper.setMaxSpeed(1000);
	myStepper.setAcceleration(5);
	myStepper.setSpeed(200);
	myStepper.moveTo(200);
   digitalWrite(led, estadoSistema);

}

void loop() {
   bool estadoPulsador = debounceReadButton();
   if (estadoPulsador) { 
      digitalWrite(led, estadoSistema);
      myStepper.run();
      delay(2000);
      if (myStepper.distanceToGo() == 0) {
		    myStepper.moveTo(myStepper.currentPosition());
        digitalWrite(led, LOW);
        digitalWrite(ledRojo, HIGH);
        delay(20);
      } 
   }
   else{
        digitalWrite(led, estadoSistema);
        digitalWrite(ledRojo, LOW);
   }
   lastButtonState = reading;
  }



int debounceReadButton(){ 
  reading = digitalRead(pulsador);
  if (reading != lastButtonState) {
    lastDebounceTime = millis();
  }
// Solo si el pulsador a estado mÃ¡s tiempo que el de anti-rebote programado, cambiaremos el valor de la variable buttonState
  if ((millis() - lastDebounceTime) > debounceDelay) {
    
    if (reading != buttonState) {
      buttonState = reading;

      if (buttonState == LOW) {
        estadoSistema = !estadoSistema;
      }
    }
  }
  return estadoSistema;

}
